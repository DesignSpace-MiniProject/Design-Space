<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Profile</title>
  <link rel="stylesheet" href="/stylesheets/adminprofile.css">
</head>
<body>
  <div class="profile-container">
    <!-- Admin Info -->
    <div class="profile-info">
      <h2>Welcome, <%= admin.username %></h2>
      <p>Email: <%= admin.email %></p>
      <p>Contact: <%= admin.contact %></p>
      <a href="/choose">Logout</a>
    </div>

    <!-- Upload Portfolio Section -->
    <div class="upload-portfolio">
      <h3>Upload Portfolio</h3>
      <form action="/createpost" method="POST" enctype="multipart/form-data">
        <label for="title">Post Title:</label>
        <input type="text" name="title" id="title" required><br>
    
        <label for="description">Post Description:</label>
        <textarea name="description" id="description" required></textarea><br>
    
        <label for="postimage">Upload Image:</label>
        <input type="file" name="postimage" id="postimage" required><br>
    
        <label for="category">Category:</label>
        <select name="category" id="category" required>
            <option value="residential">Residential</option>
            <option value="commercial">Commercial</option>
            <option value="conservation">Conservation</option>
        </select><br>
    
        <button type="submit">Submit Post</button>
      </form>
    </div>

    <!-- Displaying Uploaded Posts -->
    <% if (residentialPosts.length || commercialPosts.length || conservationPosts.length) { %>
      <!-- Residential Section -->
      <% if (residentialPosts.length) { %>
        <div class="section residential">
          <h2>Residential</h2>
          <div class="posts">
            <% residentialPosts.forEach(function(post) { %>
              <div class="post">
                <img src="/images/uploads/<%= post.image %>" alt="<%= post.title %>" />
                <h3><%= post.title %></h3>
                <p><%= post.description %></p>
                <a href="#">Go to Residential Section</a>
              </div>
            <% }); %>
          </div>
        </div>
      <% } else { %>
        <p>No Residential Posts Available</p>
      <% } %>

      <!-- Commercial Section -->
      <% if (commercialPosts.length) { %>
        <div class="section commercial">
          <h2>Commercial</h2>
          <div class="posts">
            <% commercialPosts.forEach(function(post) { %>
              <div class="post">
                <img src="/images/uploads/<%= post.image %>" alt="<%= post.title %>" />
                <h3><%= post.title %></h3>
                <p><%= post.description %></p>
                <a href="#">Go to Commercial Section</a>
              </div>
            <% }); %>
          </div>
        </div>
      <% } else { %>
        <p>No Commercial Posts Available</p>
      <% } %>

      <!-- Conservation Section -->
      <% if (conservationPosts.length) { %>
        <div class="section conservation">
          <h2>Conservation</h2>
          <div class="posts">
            <% conservationPosts.forEach(function(post) { %>
              <div class="post">
                <img src="/images/uploads/<%= post.image %>" alt="<%= post.title %>" />
                <h3><%= post.title %></h3>
                <p><%= post.description %></p>
                <a href="#">Go to Conservation Section</a>
              </div>
            <% }); %>
          </div>
        </div>
      <% } else { %>
        <p>No Conservation Posts Available</p>
      <% } %>
    <% } else { %>
      <p>No posts available in any category.</p>
    <% } %>
  </div>
</body>
</html>
