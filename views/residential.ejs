<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DesignSpace - Residential Portfolios</title>
    <link rel="stylesheet" href="/stylesheets/portfolio.css">
</head>
<body>
    <nav class="nav">
        <div class="nav-left">
            <img class="logo" src="/images/Untitled.png" alt="DesignSpace Logo">
            <h1>DesignSpace</h1>
        </div>
        <div class="nav-right">
            <a href="/" class="nav-link">Home</a>
            <a href="/contact" class="nav-link">Contact</a>
            <% if (user) { %> <!-- Check if user is authenticated -->
                <div class="user-menu">
                    <div class="user-avatar">
                        <%= user.username.charAt(0).toUpperCase() %>
                    </div>
                    <div class="user-dropdown">
                        <span class="username"><%= user.username %></span>
                        <a href="/wishlist" class="logout-link">Wishlist</a>
                        <a href="/logout" class="logout-link">Logout</a>
                    </div>
                </div>
            <% } %> <!-- End of check -->
        </div>
    </nav>

    <main id="carousel">
        <% posts.forEach((post, index) => { %>
            <div class="item <%= index === 0 ? 'active' : '' %>">
                <img src="/images/uploads/<%= post.image %>" alt="<%= post.title %>">
                <div class="carousel-caption">
                    <h3><%= post.title %></h3>
                    <p><%= post.description %></p>
                    <button class="wishlist-btn" data-post-id="<%= post._id %>">Add to Wishlist</button>
                </div>
            </div>
        <% }) %>
    </main>

    <div class="carousel-controls">
        <button id="prevBtn" class="control-btn">&lt;</button>
        <button id="nextBtn" class="control-btn">&gt;</button>
    </div>

    <script src="/javascripts/portfolio.js"></script>
</body>
</html>
